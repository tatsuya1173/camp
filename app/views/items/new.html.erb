<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">アイテム登録画面</h1>

    <%= form_with model: @item do |form|  %>
      <div class="form">
        <div class="form-body">
          <table class="msr_text_05">
            <tr>
              <th><%= "アイテム写真" %></th>
              <td><%= form.file_field :item_image %></td>
            </tr>
            <tr>
              <th><%= "アイテム名" %></th>
              <td><%= form.text_field :products_name %></td>
            </tr>
            <tr>
              <th><%= "ブランド" %></th>
              <td><%= form.text_field :brand %></td>
            </tr>
            <tr>
              <th><%= "サイズ" %></th>
              <td><%= form.text_field :size %></td>
            </tr>
            <tr>
              <th><%= "価格" %></th>
              <td><span>&yen;</span><%= form.text_field :price %></td>
            </tr>
            <%= form.hidden_field :post_id, :value => @post.id %>
          </table>

          <div>
            <ul >
              <input class="btn btn-primary" type="submit" value="登録" >
            </ul>
          </div>

        </div>
      </div>
    <% end %>
    <br>
    <%= link_to("トップページへ戻る", "/") %>
  </div>
</div>
