<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">新規投稿</h1>

    <%= form_with(model: @post, url: posts_path,local: true) do |form| %>
      <div class="form">
        <div class="form-body">
          <table class="msr_text_05">
            <tr>
              <th><%= "メイン写真" %></th>
              <td><%= form.file_field :image %></td>
            </tr>
            <tr>
              <th><%= "タイトル" %></th>
              <td><%= form.text_field :image_title %></td>
            </tr>
            <tr>
              <th><%= "説明" %></th>
              <td><%= form.text_field :description %></td>
            </tr>
          </table>
          <%= form.hidden_field :user_id, :value => current_user.id %>
          <div>
            <ul >
              <%= form.submit %>
            </ul>
          </div>
        </div>
      </div>
    <% end %>
    <br>
    <%= link_to("トップページへ戻る", "/") %>
  </div>
</div>
